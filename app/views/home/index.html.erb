<% content_for :head do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.canvas-container').trigger('doAnimation');
    });
  </script>
<% end %>

<div class="canvas-container">
  <div class="empty">
    <%= image_tag("spinner.gif", :class => "spinner", :height => '24px') %>
    <span>We're calculating your effect...</span>
  </div>
</div>

<% if !current_user %>
  <div class="cta">
    This is a sample ripple effect.  <%= link_to "Login", "/auth/foursquare" %> to see yours.
  </div>
<% end %>